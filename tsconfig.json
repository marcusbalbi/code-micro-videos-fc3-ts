{
  "compilerOptions": {
    "incremental": true,
    "target": "es2017",
    "experimentalDecorators": true,
    "module": "commonjs",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "outDir": "./dist",
    "paths": {
      "@core/*": [
        "./*"
      ]
    },
    "plugins": [
      { "transform": "typescript-transform-paths"}
    ]
  },
  "include": ["src/"]
}
