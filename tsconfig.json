{
  "compilerOptions": {
    "incremental": true,
    "target": "es2017",
    "experimentalDecorators": true,
    "module": "commonjs",
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@core/shared/*": [
        "./src/shared/*"
      ]
    }
  },
  "include": ["src/"]
}
